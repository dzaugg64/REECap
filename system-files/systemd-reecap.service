[Unit]
Description=REECap Backend service
After=network.target

[Service]
User=root
WorkingDirectory=/home/reecap/reecap
Environment="PATH=/home/reecap/reecap/.venv/bin"
ExecStart=/home/reecap/reecap/.venv/bin/gunicorn --worker-class eventlet -w 4 -b 127.0.0.1:5000 main:app
# ExecStart=//home/reecap/reecap/.venv/bin/python /opt/reecap/main.py
Restart=always

[Install]
WantedBy=multi-user.target