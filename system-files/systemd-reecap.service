[Unit]
Description=REECap Backend service
After=network.target

[Service]
User=root
WorkingDirectory=/home/reecap/reecap
Environment="PATH=/home/reecap/reecap/.venv/bin:/usr/bin"
ExecStart=/home/reecap/reecap/.venv/bin/gunicorn --worker-class eventlet -w 1 -b 127.0.0.1:5000 --timeout 600 --keep-alive 5 main:app
Restart=always

[Install]
WantedBy=multi-user.target